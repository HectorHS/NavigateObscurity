{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "target": "ES6",
    "noEmit": true,
    "baseUrl": ".",
    "isolatedModules": true,
    "strict": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowImportingTsExtensions": true,
  }
}
